count=int(input("please the enter count of students: "))
marks=[]
sum=0
min=20
max=0
for i in range(count):
      x=float(input("please enter your mark: "))
      if x > 0 and x <= 20: 
            marks.append(x)
            sum+=x
            if x > max:
                  max=x
            if x < min:
                  min=x
      else:
            print("wrong number!")
  

print("the avg is:", sum/count )
print("the greatest mark is:", max)
print("the least mark is:", min)
